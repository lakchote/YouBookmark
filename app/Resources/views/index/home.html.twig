{% extends 'base.html.twig' %}

{% block body %}
    <div class="col-xs-12">
        <div class="search-bar">
            <img id="camel" src="{{ asset('img/camel.png') }}" class="img-responsive" alt="">
            {% for msg in app.flashes('success') %}
                <div class="addCategory--success">
                      <span>{{ msg }}</span>
                </div>
            {% endfor %}
            <form class="form-inline">
                    <div class="input-group">
                        <input type="search" maxlength="1" class="form-control" placeholder="Rechercher..." data-source="{{ path('get_category') }}" id="searchInput">
                            <div class="input-group-btn">
                                <button type="submit" class="btn btn-color-primary" id="submitSearch">
                                    <span class="fa fa-search" aria-hidden="true"></span>
                                </button>
                            </div>
                    </div>
            </form>
            <div id="removeCategory">
                <a href="#"><span class="fa fa-times" aria-hidden="true"></span> Supprimer une catégorie</a>
            </div>
        </div>
        <div class="modal fade" data-url="{{ path('modal_add_category') }}" id="modalAddCategory" tabindex="-1" role="dialog" aria-labelledby="modalAddCategoryLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Fermer">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <h4 class="modal-title" id="modalAddCategoryLabel">Ajouter une catégorie</h4>
                    </div>
                    <div class="modal-body" id="addCategoryBody"></div>
                </div>
            </div>
        </div>
        <div class="modal fade" data-url="{{ path('modal_remove_category') }}" id="modalRemoveCategory" tabindex="-1" role="dialog" aria-labelledby="modalRemoveCategoryLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                   <div class="modal-header">
                       <button type="button" class="close" data-dismiss="modal" aria-label="Fermer">
                           <span aria-hidden="true">&times;</span>
                       </button>
                       <h4 class="modal-title" id="modalRemoveCategoryLabel">Supprimer une catégorie</h4>
                   </div>
                    <div class="modal-body" id="removeCategoryBody"></div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/base.js') }}"></script>
{% endblock %}
